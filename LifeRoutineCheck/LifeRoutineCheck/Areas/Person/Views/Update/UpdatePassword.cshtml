@model LifeRoutineCheck.Areas.Person.ViewModels.ViewPersonPassword
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/updatepassword.css" />
<link href="https://fonts.googleapis.com/earlyaccess/kokoro.css" rel="stylesheet">

@{
    Layout = null;
}

<body>
    <form asp-controller="Person" asp-action="UpdPassword">
        <div class="gradation">
            <div class="updatepasswordbox">
                <h1>パスワード再設定画面</h1>
                <div>
                    <div class="padding10">
                        <label asp-for="Person_Nm"></label>
                        <input asp-for="Person_Nm" />
                        <br />
                        <span asp-validation-for="Person_Nm" class="text-danger"></span>

                    </div>

                    <div class="padding10">
                        <label asp-for="MailAdress"></label>
                        <input asp-for="MailAdress" type="email" />
                        <br />
                        <span asp-validation-for="Person_Nm" class="text-danger"></span>

                    </div>

                    <div class="padding10">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" />
                        <br />
                        <span asp-validation-for="Person_Nm" class="text-danger"></span>
                    </div>

                    <div class="padding10">
                        <button type="submit">再設定</button>
                        <br />
                        <a class="btn-dark padding10" asp-controller="Login" asp-action="Index" asp-area="">戻る</a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</body>